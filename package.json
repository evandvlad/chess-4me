{
  "name": "chess-4me",
  "description": "Chess for me",
  "private": true,
  "version": "4.1.0",
  "author": "Andrey Evstigneev",
  "main": "main.js",
  "scripts": {
    "start": "npm run test && concurrently \"tsc --noEmit --watch\" \"vite\"",
    "start:app": "npm run test && npm run build && electron .",
    "dist": "npm run test && npm run build && electron-builder --win=portable",
    "test": "concurrently \"tsc --noEmit\" \"stylelint src/**/*.scss\" \"eslint **/*.{ts,tsx}\" \"cypress run-ct\"",
    "test:e2e": "cypress run",
    "test:all": "npm run test && npm run test:e2e",
    "open:e2e": "cypress open",
    "open:unit": "cypress open-ct",
    "build": "vite build --base \"./\""
  },
  "dependencies": {
    "mobx": "^6.3.7",
    "mobx-react-lite": "^3.2.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@cypress/vite-dev-server": "^2.2.1",
    "@cypress/webpack-preprocessor": "^5.10.0",
    "@types/react": "^17.0.37",
    "@types/react-dom": "^17.0.11",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "@vitejs/plugin-react-refresh": "^1.3.6",
    "concurrently": "^6.4.0",
    "cypress": "^9.1.0",
    "electron": "^16.0.2",
    "electron-builder": "^22.14.5",
    "eslint": "^8.3.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.27.1",
    "postcss-modules": "^4.2.2",
    "postcss-scss": "^4.0.2",
    "postcss-url": "^10.1.3",
    "sass": "^1.43.5",
    "stylelint": "^14.1.0",
    "stylelint-config-standard": "^24.0.0",
    "ts-loader": "^9.2.6",
    "typescript": "^4.5.2",
    "typescript-plugin-css-modules": "^3.4.0",
    "vite": "^2.6.14"
  }
}
