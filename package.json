{
  "name": "chess-4me",
  "description": "Chess for me",
  "private": true,
  "version": "4.0.0",
  "author": "Andrey Evstigneev",
  "main": "main.js",
  "scripts": {
    "start": "npm run test && run-p _watch:types _watch:app",
    "start:app": "npm run test && npm run _build:app && electron .",
    "dist": "npm run test && npm run _build:app && electron-builder --win=portable",
    "test": "run-p _check:types _check:code _check:unit",
    "test:e2e": "npm run _build:site && run-p _preview:site _check:e2e",
    "test:all": "run-s test test:e2e",
    "open:e2e": "cypress open",
    "open:unit": "cypress open-ct",
    "_build:app": "vite build --base \"./\"",
    "_build:site": "vite build",
    "_preview:site": "vite preview",
    "_watch:app": "vite",
    "_watch:types": "tsc --noEmit --watch",
    "_check:e2e": "cypress run --browser chrome",
    "_check:unit": "cypress run-ct",
    "_check:types": "tsc --noEmit",
    "_check:code": "run-p _check:scss _check:ts",
    "_check:scss": "stylelint src/**/*.scss",
    "_check:ts": "eslint **/*.{ts,tsx}"
  },
  "dependencies": {
    "mobx": "^6.3.5",
    "mobx-react-lite": "^3.2.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@cypress/vite-dev-server": "^2.2.0",
    "@cypress/webpack-preprocessor": "^5.9.1",
    "@types/react": "^17.0.33",
    "@types/react-dom": "^17.0.10",
    "@typescript-eslint/eslint-plugin": "^5.2.0",
    "@typescript-eslint/parser": "^5.2.0",
    "@vitejs/plugin-react-refresh": "^1.3.6",
    "cypress": "^8.7.0",
    "electron": "^15.3.0",
    "electron-builder": "^22.13.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.26.1",
    "npm-run-all": "^4.1.5",
    "postcss-modules": "^4.2.2",
    "postcss-scss": "^4.0.1",
    "postcss-url": "^10.1.3",
    "sass": "^1.43.4",
    "stylelint": "^14.0.1",
    "stylelint-config-standard": "^23.0.0",
    "ts-loader": "^9.2.6",
    "typescript": "^4.4.4",
    "typescript-plugin-css-modules": "^3.4.0",
    "vite": "^2.6.13"
  }
}
